{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  // "files": [], // Any hardhat plugin's main .d.ts has to be added here
  "exclude": ["dist", "node_modules", "./test"],
  "include": [
    "./src"
  ]
}
